<resources>
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small" />

    <style name="DetailsActivityAction" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="drawableTint">@color/primaryColor</item>
        <item name="android:enabled">false</item>
        <item name="android:alpha">0.25</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">@drawable/ic_baseline_menu_24</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="SecondaryToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Collapsed icon color -->
        <item name="android:tint">@color/white</item>
        <!-- Expanded icon color -->
        <item name="colorControlNormal">@color/grey</item>
        <!-- Text color -->
        <item name="android:editTextColor">@color/black</item>
        <!-- Cursor color -->
        <item name="colorAccent">@color/black</item>
        <!-- Hint color -->
        <item name="android:textColorHint">@color/grey</item>
    </style>
</resources>